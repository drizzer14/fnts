{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",

    "skipLibCheck": true,
    "stripInternal": true,

    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib"
  },

  "include": ["src"],

  "tsc-alias": {
    "debug": true,
    "verbose": true,
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  }
}
